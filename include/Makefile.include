LATEX=pdflatex
LATEXMK=latexmk
LATEXOPT=-file-line-error

BUILD_DIR="./build/"

MAIN=report
SOURCES=$(MAIN).tex Makefile 
# FIGURES := $(shell ls fig/*.pdf)

all:    $(MAIN).pdf

.refresh:
	touch .refresh

$(MAIN).pdf: $(MAIN).tex .refresh $(SOURCES) # $(FIGURES)
	$(LATEXMK) --shell-escape -jobname=${BUILD_DIR}report -pdf $(MAIN).tex

force:
	touch .refresh
	$(MAKE) $(MAIN).pdf

.PHONY: clean force all

view:
	xdg-open ${BUILD_DIR}${MAIN}.pdf &

clean:
	$(LATEXMK) -C $(MAIN).tex -outdir=${BUILD_DIR}
	rm -f $(MAIN).pdfsync
	rm -rf *~ *.tmp
